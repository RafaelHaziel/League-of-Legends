@model LoLDto
@inject LoL.Services.ILoLService service
@{
    ViewData["Title"] = "Home";
}
<section class="pt-5 pb-3 text-center container">
    <div class="row">
        <div class="col mx-auto">
            <h1>League Of Legends</h1>
            <div class="group">
                <button id="btn-all" class="btn btn-lg my-2 text-white bg-secondary btn-filter"onclick="filter('all')">Ver Todos</button>
                @foreach (var rota in Model.Rotas)
                {
                    <button id="btn-@rota.Nome.ToLower()" class="btn btn-sm my-2 text-white btn-filter" onclick="filter('@rota.Nome.ToLower()')" style="background-color:@rota.Cor">@rota.Nome</button>
                }
            </div>
        </div>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

            <!-- Card Pokemon - Inicio -->
            @foreach (var campeao in Model.Campeoes)
            {
                <div class="col">
                    <div class="card shadow-sm cursor-pointer @string.Join(' ',campeao.Rota).ToLower()" onclick="GetInfo(@campeao.Numero)">
                        <img src="@campeao.Imagem" class="card-img-top" width="100%"height="300" alt="@campeao.Nome"/>
                        <div class="card-body">
                            <p class="card-text mb-0">Nº @campeao.Numero.ToString("000")</p>
                            <h3 class="card-title">@campeao.Nome</h3>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    @foreach (var rota in campeao.Rota)
                                    {
                                        <a asp-action="Index" asp-routetipo="@rota.ToLower()" class="btn my-2 text-white" style="background-color:@service.GetRota(rota).Cor">@rota</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>  
                </div>
            }
            <!-- Card Pokemon - Fim -->

            <div id="zeroCampeao" class="col-lg-12 text-center">
                <h1 class="my-3 text-danger">Nenhum Campeão Encontrado</h1>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/site.js"></script>
    <script>
        let toFilter = '@Html.Raw(ViewData["Filter"])';
        filter(toFilter);
        function GetInfo(number) {
            window.location = '@Url.Action("Details", "Home")' + '?Numero=' + number;
        }
    </script>
}